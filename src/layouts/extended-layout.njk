{% from "skip-link/macro.njk" import idskSkipLink -%}
{% from "header/macro.njk" import idskHeader -%}
{% from "footer/macro.njk" import idskFooter -%}
{# specify absolute url for the static assets folder e.g. http://wwww.domain.com/assets #}
{%- set assetUrl = assetUrl | default(assetPath) -%}
<!DOCTYPE html>
<html lang="{{ htmlLang | default('sk') }}" class="govuk-template {{ htmlClasses }}">
<head>
  <meta charset="utf-8" />
  <title>{% block pageTitle %}ID-SK Frontend{% endblock %}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
  <meta name="theme-color" content="{{ themeColor | default('#0b0c0c') }}" /> {# Hardcoded value of $govuk-black #}
  {# Ensure that older IE versions always render with the correct rendering engine #}
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />

  {% block headIcons %}
    <link rel="shortcut icon" sizes="16x16 32x32 48x48" href="{{ assetPath | default('/public') }}/images/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" sizes="180x180" href="{{ assetPath | default('/public') }}/images/apple-touch-icon-180x180.png">
    <link rel="apple-touch-icon" sizes="167x167" href="{{ assetPath | default('/public') }}/images/apple-touch-icon-167x167.png">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ assetPath | default('/public') }}/images/apple-touch-icon-152x152.png">
    <link rel="apple-touch-icon" href="{{ assetPath | default('/public') }}/images/apple-touch-icon.png">
  {% endblock %}

  {% block head %}{% endblock %}
  <link rel="stylesheet" href="public/styles/main.css">
</head>
<body class="govuk-template__body {{ bodyClasses }}">
<script>document.body.className = ((document.body.className) ? document.body.className + ' js-enabled' : 'js-enabled');</script>

{% block skipLink %}
  {{ idskSkipLink({
    href: '#main-content',
    text: 'Preskočiť na hlavný obsah'
  }) }}
{% endblock %}

{% block header %}
  {{ idskHeader({}) }}
{% endblock %}

{% block main %}
  <div class="govuk-width-container">
    {% block beforeContent %}{% endblock %}
    <main class="govuk-main-wrapper {{ mainClasses }}" id="main-content">
      {% block content %}{% endblock %}
    </main>
  </div>
{% endblock %}

{% block footer %}
  {{ idskFooter({}) }}
{% endblock %}

{% block bodyEnd %}
{% endblock %}

<script  src="idsk/all.js"></script>
<script>window.GOVUKFrontend.initAll()</script>
</body>
</html>
